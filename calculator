  def printf(result): #Функция для вывода финала
        print(f"{a}{znak}{b}={result}")
    def summ(a,b): #Функция суммы
        return a+b #Возвращаем результат
    def deff(a,b): #Функция разности
        return a-b #Возвращаем результат
    def multi(a,b): #Функция умножения
        return a*b #Возвращаем результат
    def div(a,b): #Функция деления
        if b == 0:
            return 0
        else:
            return a/b # Возвращаем результат
    if znak == 1: #Проверка на выбранную операцию от пользователя
        znak = "+"
        result = summ(a,b) #Вызов функции и запись результата в переменную
    elif znak == 2:
        znak = "-"
        result = deff(a,b) #Вызов функции и запись результата в переменную
    elif znak == 3:
        znak = "*"
        result = multi(a,b) #Вызов функции и запись результата в переменную
    elif znak == 4:
        znak = "/"
        result = div(a,b) #Вызов функции и запись результата в переменную
    printf(result)  #Вызов функции для вывода на экран
def menu(): #Функция меню
    while True:
        print("Добро пожаловать в калькулятор")
        a = int(input("Введите значение 1 переменной"))
        b = int(input("Введиде значение 2 переменной"))
        print("Выберите операцию: \n"
              "1.Сумма: \n"
              "2.Разность: \n"
              "3.Умножение: \n"
              "4.Деление: \n"
              "5.Выход: \n")
        answer_user = int(input("Ваш выбор:"))
        if answer_user == 0:
            print("Досвидания")
            break
        calcul(answer_user,a,b)
menu()
